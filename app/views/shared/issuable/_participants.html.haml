.block.participants
  .sidebar-collapsed-icon
    = icon('users')
    %span
      = participants.count
  .title.hide-collapsed
    = pluralize participants.count, "个参与者", "个参与者"
  - participants.each do |participant|
    %span.hide-collapsed
      = link_to_member(@project, participant, name: false, size: 24)

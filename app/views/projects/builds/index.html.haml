- page_title "构建"
= render "header_title"

.project-issuable-filter
  .controls
    - if can?(current_user, :manage_builds, @project)
      .pull-left.hidden-xs
        - if @all_builds.running_or_pending.any?
          = link_to '取消正在运行的', cancel_all_namespace_project_builds_path(@project.namespace, @project), data: { confirm: '确定要继续么？' }, class: 'btn btn-danger', method: :post

  %ul.center-top-menu
    %li{class: ('active' if @scope.nil?)}
      = link_to project_builds_path(@project) do
        正在运行
        %span.badge.js-running-count
          = number_with_delimiter(@all_builds.running_or_pending.count(:id))

    %li{class: ('active' if @scope == 'finished')}
      = link_to project_builds_path(@project, scope: :finished) do
        已完成
        %span.badge.js-running-count
          = number_with_delimiter(@all_builds.finished.count(:id))

    %li{class: ('active' if @scope == 'all')}
      = link_to project_builds_path(@project, scope: :all) do
        全部
        %span.badge.js-totalbuilds-count
          = number_with_delimiter(@all_builds.count(:id))

.gray-content-block
  列出本项目 #{(@scope || 'running').capitalize} 的构建

%ul.content-list
  - if @builds.blank?
    %li
      .nothing-here-block 没有可显示的构建
  - else
    .table-holder
      %table.table.builds
        %thead
          %tr
            %th 状态
            %th Runner
            %th 提交
            %th 参考
            %th 阶段
            %th 名称
            %th 运行时间
            %th 完成时间
            %th

        - @builds.each do |build|
          = render 'projects/commit_statuses/commit_status', commit_status: build, commit_sha: true, stage: true, allow_retry: true

    = paginate @builds, theme: 'gitlab'

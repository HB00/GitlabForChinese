.top-area
  .nav-controls
    = form_tag request.original_url, method: :get, class: 'project-filter-form', id: 'project-filter-form' do |f|
      = search_field_tag :filter_projects, params[:filter_projects], placeholder: '按名称过滤...', class: 'input-short project-filter-form-field form-control projects-list-filter', spellcheck: false, id: 'project-filter-form-field'
    - if current_user && current_user.can_create_project?
      = link_to new_project_path, class: 'btn btn-new' do
        = icon('plus')
        新项目

.projects-list-holder
  = render 'shared/projects/list', projects: @projects, projects_limit: 20, stars: false, skip_namespace: true
